public class contador 
{
    int pessoas_na_sala=0 ; 
    
    void fim_do_evento (){
        pessoas_na_sala=0 ;
    }
    void adicionar_pessoas(int n){
        pessoas_na_sala=pessoas_na_sala+1*n;
    }
    void exibir_pessoas(){
        System.out.printf("numero de pessoas na sala: %d",pessoas_na_sala);
    }
}
